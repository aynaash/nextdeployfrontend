{
  "plugins": ["prettier-plugin-tailwindcss"],
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all", // safer for diffs and edits
  "jsxSingleQuote": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "tailwindConfig": "./tailwind.config.ts",
  "overrides": [
    {
      "files": "*.{ts,tsx}",
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
